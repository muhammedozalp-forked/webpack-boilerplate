block variables
- var path = self.htmlWebpackPlugin.options
- var pathToFile = (path.mode == 'development') ? "./sources/" : ""

doctype html
html(lang="pl", dir="ltr", class="about")

    include ./includes/head.pug
    include ./includes/menuItem.pug

    head
        +head(path.file)

    body
        +menuItem('about')
        h1 ABOUT ME
        img(src=pathToFile+path.file.body.image class="responsive")