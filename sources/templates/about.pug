block variables
- var path = self.htmlWebpackPlugin.options
- var pathToFile = (path.mode == 'development') ? "../../../sources/" : ""
- var logoFile = "images/fotograf-slubny-warszawa-lublin-chelm.svg";

doctype html
html(lang="pl", dir="ltr", class="about")

    include ./includes/head.pug
    include ./includes/header.pug
    include ./includes/logo.pug
    include ./includes/menuItem.pug

    head
        +head(path.file)

    body

        +header("about", true)

        main.container-article
            //- h1.title-head.text-center
            //-     | o mnie
            .columns.flex
                .column.item-image.hide-md
                    img(src=""+pathToFile+path.file.body.image+"", class="img-responsive img-shadow", alt="O mnie")
                .column.item-text.text-center
                    !=path.file.body.mainText

        include ./includes/footer.pug
        include ./includes/backToTop.pug