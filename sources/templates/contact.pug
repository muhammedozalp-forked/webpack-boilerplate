block variables
- var path = self.htmlWebpackPlugin.options
- var pathToFile = (path.mode == 'development') ? "../../../sources/" : ""
- var logoFile = "images/fotograf-slubny-warszawa-lublin-chelm.svg";

doctype html
html(lang="pl", dir="ltr", class="contact")

    include ./includes/head.pug
    include ./includes/header.pug
    include ./includes/logo.pug
    include ./includes/menuItem.pug

    head
        +head(path.file)

    body

        +header("contact", true)

        main.container-article
            //- h1 kontakt
            .columns
                .column.text-center!= path.file.body.mainText

            .columns.flex
                .column.item-image.hide-md
                    img(src=""+pathToFile+path.file.body.image+"", class="img-responsive img-shadow", alt="Napisz emaila")
                .column.item-form
                    form(class="form", autocomplete="off", method="post")
                        .form-group
                            label(class="form-label", for="imie-i-nazwisko") Imię i naziwsko
                            input(class="form-input", type="text", placeholder="imię i nazwisko", name="imie-i-nazwisko", id="name", required)
                        .form-group
                            label(class="form-label", for="twoj-email") Twoj adres email
                            input(class="form-input", type="email", placeholder="example@example.com", name="twoj-email", id="email", required)
                        .form-group
                            label(class="form-label", for="data-wydarzenia") Data Ślubu
                            input(class="form-input", type="text", pattern="(^(((0[1-9]|[12][0-8])[\.](0[1-9]|1[012]))|((29|30|31)[\.](0[13578]|1[02]))|((29|30)[\.](0[4,6,9]|11)))[\.](19|[2-9][0-9])\\d\\d$)|(^29[\.]02[\.](19|[2-9][0-9])(00|04|08|12|16|20|24|28|32|36|40|44|48|52|56|60|64|68|72|76|80|84|88|92|96)$)", placeholder="dd.mm.rrrr" , name="data-wydarzenia", id="date", required)
                        .form-group
                            label(class="form-label", for="miejsce-wydarzenia") Miejscowość, w której odbędzie się ślub
                            input(class="form-input", type="text", placeholder="miejscowość", name="miejsce-wydarzenia", id="place", required)
                        .form-group
                            label(class="form-label", for="tresc-wiadomosci") Treść wiadomości (pole opcjonalne)
                            textarea(class="form-input", id="text", name="tresc-wiadomosci", rows="6")
                        .form-group
                            button(type="submit", class="btn") WYŚLIJ

        include ./includes/footer.pug
        include ./includes/backToTop.pug