block variables
- var path = self.htmlWebpackPlugin.options
- var pathToFile = (path.mode == 'development') ? "../../../source/" : ""
- var logoFile = "images/fotograf-slubny-warszawa-lublin-chelm.svg";

doctype html
html(lang="pl", dir="ltr")

    include ./../../includes/head.pug
    include ./../../includes/header.pug
    include ./../../includes/logo.pug
    include ./../../includes/menuItem.pug

    head
        +head(path.file)

    body

        +header("contact", true)

        main
            .container
                .text-info
                    h1 kontakt
                    .contents.text-center 
                        !=path.file.body.mainText

            .container.grid-lg
                .columns
                    .column.hide-md
                        img(src=""+pathToFile+path.file.body.image+"", class="img-responsive img-shadow", alt="Napisz emaila")
                    .column.form-info
                        form(method="post", class="form", autocomplete="on")
                            .form-group
                                label(class="form-label", for="name") Imię i naziwsko
                                input(class="form-input input-lg", type="text", placeholder="imię i nazwisko", name="name", id="name", required)
                            .form-group
                                label(class="form-label", for="email") Twoj adres email
                                input(class="form-input input-lg", type="email", placeholder="example@example.com", name="email", id="email", required)
                            .form-group
                                label(class="form-label", for="date") Data Ślubu
                                input(class="form-input input-lg", type="text", pattern="^\\d{2}.\\d{2}.\\d{4}$", placeholder="dd.mm.rrrr" , name="date", id="date", required)
                            .form-group
                                label(class="form-label", for="place") Miejscowość, w której odbędzie się ślub
                                input(class="form-input input-lg", type="text", placeholder="miejscowość", name="place", id="place", required)
                            .form-group
                                label(class="form-label", for="text") Treść wiadomości (pole opcjonalne)
                                textarea(class="form-input", id="text", rows="3")
                            .form-group
                                input(type="submit", class="btn btn-primary button", value="WYŚLIJ")

            include ./../../includes/backToTop.pug

        include ./../../includes/footer.pug