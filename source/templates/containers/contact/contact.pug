block variables
- var path = self.htmlWebpackPlugin.options
- var pathToFile = (path.mode == 'development') ? "../../../source/" : ""
- var logoFile = "images/fotograf-slubny-warszawa-lublin-chelm.svg";

doctype html
html(lang="pl", dir="ltr")

    include ./../../includes/head.pug
    include ./../../includes/header.pug
    include ./../../includes/logo.pug
    include ./../../includes/menuItem.pug

    head
        +head(path.file)

    body

        +header("contact", true)

        main
            .container
                .text-info
                    h1 kontakt
                    .contents.text-center 
                        !=path.file.body.mainText

            .container.grid-lg
                .columns
                    .column.hide-md
                        img(src=""+pathToFile+path.file.body.image+"", class="img-responsive", alt="Napisz emaila")
                    .column.form-info
                        form
                            .form-group
                                label(class="form-label", for="name") Imię i naziwsko
                                input(class="form-input input-lg", type="text", name="imie-i-nazwisko", id="name")
                            .form-group
                                label(class="form-label", for="email") Twoj adres email
                                input(class="form-input input-lg", type="email", name="email", id="email")
                            .form-group
                                label(class="form-label", for="data") Data Ślubu
                                input(class="form-input input-lg", type="text", name="data-slubu", id="data")
                            .form-group
                                label(class="form-label", for="place") Miejscowość, w której odbędzie się ślub
                                input(class="form-input input-lg", type="text", name="miejsce-slubu", id="place")
                            .form-group
                                label(class="form-label", for="text") Treść wiadomości (pole opcjonalne)
                                textarea(class="form-input", id="text", rows="3")
                            .form-group
                                button(class="btn btn-primary") WYŚLIJ
 

            include ./../../includes/backToTop.pug

        include ./../../includes/footer.pug